{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "Creates the Web Application Firewall (WAF) and associates it with all Synapse application load balancers.",
	"Resources": {
		"${stack}${instance}SizeRestrictionSet": {
			"Type": "AWS::WAFRegional::SizeConstraintSet",
			"Properties": {
				"Name": "${stack}-${instance}-size-restrictions",
				"SizeConstraints": [
					{
						"FieldToMatch": {
							"Type": "URI"
						},
						"TextTransformation": "NONE",
						"ComparisonOperator": "GT",
						"Size": 512
					},
					{
						"FieldToMatch": {
							"Type": "QUERY_STRING"
						},
						"TextTransformation": "NONE",
						"ComparisonOperator": "GT",
						"Size": 1024
					},
					{
						"FieldToMatch": {
							"Type": "BODY"
						},
						"TextTransformation": "NONE",
						"ComparisonOperator": "GT",
						"Size": 2097152
					},
					{
						"FieldToMatch": {
							"Type": "HEADER",
							"Data": "cookie"
						},
						"TextTransformation": "NONE",
						"ComparisonOperator": "GT",
						"Size": 4096
					}
				]
			}
		},
		"${stack}${instance}SizeRestrictionRule": {
			"Type": "AWS::WAFRegional::Rule",
			"Properties": {
				"Name": "${stack}-${instance}-size-restrictions-rule",
				"MetricName": "${stack}${instance}SizeRestrictionsRule",
				"Predicates": [
					{
						"DataId": {
							"Ref": "${stack}${instance}SizeRestrictionSet"
						},
						"Negated": false,
						"Type": "SizeConstraint"
					}
				]
			}
		},
		"${stack}${instance}URISQLInjectionSet": {
			"Type": "AWS::WAFRegional::SqlInjectionMatchSet",
			"Properties": {
				"Name": "${stack}-${instance}-URI-SQL-Injection-Set",
				"SqlInjectionMatchTuples": [
					{
						"FieldToMatch": {
							"Type": "URI"
						},
						"TextTransformation": "URL_DECODE"
					},
					{
						"FieldToMatch": {
							"Type": "URI"
						},
						"TextTransformation": "HTML_ENTITY_DECODE"
					}
				]
			}
		},
		"${stack}${instance}QuerySQLInjectionSet": {
			"Type": "AWS::WAFRegional::SqlInjectionMatchSet",
			"Properties": {
				"Name": "${stack}-${instance}-Query-SQL-Injection-Set",
				"SqlInjectionMatchTuples": [
					{
						"FieldToMatch": {
							"Type": "QUERY_STRING"
						},
						"TextTransformation": "URL_DECODE"
					},
					{
						"FieldToMatch": {
							"Type": "QUERY_STRING"
						},
						"TextTransformation": "HTML_ENTITY_DECODE"
					}
				]
			}
		},
		"${stack}${instance}BodySQLInjectionSet": {
			"Type": "AWS::WAFRegional::SqlInjectionMatchSet",
			"Properties": {
				"Name": "${stack}-${instance}-Body-SQL-Injection-Set",
				"SqlInjectionMatchTuples": [
					{
						"FieldToMatch": {
							"Type": "BODY"
						},
						"TextTransformation": "URL_DECODE"
					},
					{
						"FieldToMatch": {
							"Type": "BODY"
						},
						"TextTransformation": "HTML_ENTITY_DECODE"
					}
				]
			}
		},
		"${stack}${instance}HeaderSQLInjectionSet": {
			"Type": "AWS::WAFRegional::SqlInjectionMatchSet",
			"Properties": {
				"Name": "${stack}-${instance}-Header-SQL-Injection-Set",
				"SqlInjectionMatchTuples": [

					{
						"FieldToMatch": {
							"Type": "HEADER",
							"Data": "cookie"
						},
						"TextTransformation": "URL_DECODE"
					},
					{
						"FieldToMatch": {
							"Type": "HEADER",
							"Data": "cookie"
						},
						"TextTransformation": "HTML_ENTITY_DECODE"
					}
				]
			}
		},
		"${stack}${instance}URISQLInjectionRule": {
			"Type": "AWS::WAFRegional::Rule",
			"Properties": {
				"MetricName": "${stack}${instance}URISQLInjectionRule",
				"Name": "${stack}-${instance}-URI-SQL-Injection-Rule",
				"Predicates": [
					{
						"Type": "SqlInjectionMatch",
						"Negated": false,
						"DataId": {
							"Ref": "${stack}${instance}URISQLInjectionSet"
						}
					}
				]
			}
		},
		"${stack}${instance}QuerySQLInjectionRule": {
			"Type": "AWS::WAFRegional::Rule",
			"Properties": {
				"MetricName": "${stack}${instance}QuerySQLInjectionRule",
				"Name": "${stack}-${instance}-Query-SQL-Injection-Rule",
				"Predicates": [
					{
						"Type": "SqlInjectionMatch",
						"Negated": false,
						"DataId": {
							"Ref": "${stack}${instance}QuerySQLInjectionSet"
						}
					}
				]
			}
		},
		"${stack}${instance}BodySQLInjectionRule": {
			"Type": "AWS::WAFRegional::Rule",
			"Properties": {
				"MetricName": "${stack}${instance}BodySQLInjectionRule",
				"Name": "${stack}-${instance}-Body-SQL-Injection-Rule",
				"Predicates": [
					{
						"Type": "SqlInjectionMatch",
						"Negated": false,
						"DataId": {
							"Ref": "${stack}${instance}BodySQLInjectionSet"
						}
					}
				]
			}
		},
		"${stack}${instance}HeaderSQLInjectionRule": {
			"Type": "AWS::WAFRegional::Rule",
			"Properties": {
				"MetricName": "${stack}${instance}HeaderSQLInjectionRule",
				"Name": "${stack}-${instance}-Header-SQL-Injection-Rule",
				"Predicates": [
					{
						"Type": "SqlInjectionMatch",
						"Negated": false,
						"DataId": {
							"Ref": "${stack}${instance}HeaderSQLInjectionSet"
						}
					}
				]
			}
		},
		"${stack}${instance}XssSet": {
			"Type": "AWS::WAFRegional::XssMatchSet",
			"Properties": {
				"Name": "${stack}-${instance}-XSS-Rule",
				"XssMatchTuples": [
					{
						"FieldToMatch": {
							"Type": "URI"
						},
						"TextTransformation": "URL_DECODE"
					},
					{
						"FieldToMatch": {
							"Type": "URI"
						},
						"TextTransformation": "HTML_ENTITY_DECODE"
					},
					{
						"FieldToMatch": {
							"Type": "QUERY_STRING"
						},
						"TextTransformation": "URL_DECODE"
					},
					{
						"FieldToMatch": {
							"Type": "QUERY_STRING"
						},
						"TextTransformation": "HTML_ENTITY_DECODE"
					},
					{
						"FieldToMatch": {
							"Type": "BODY"
						},
						"TextTransformation": "URL_DECODE"
					},
					{
						"FieldToMatch": {
							"Type": "BODY"
						},
						"TextTransformation": "HTML_ENTITY_DECODE"
					},
					{
						"FieldToMatch": {
							"Type": "HEADER",
							"Data": "cookie"
						},
						"TextTransformation": "URL_DECODE"
					},
					{
						"FieldToMatch": {
							"Type": "HEADER",
							"Data": "cookie"
						},
						"TextTransformation": "HTML_ENTITY_DECODE"
					}
				]
			}
		},
		"${stack}${instance}XssRule": {
			"Type": "AWS::WAFRegional::Rule",
			"Properties": {
				"MetricName": "${stack}${instance}XssRule",
				"Name": "${stack}-${instance}-XSS-Rule",
				"Predicates": [
					{
						"Type": "XssMatch",
						"Negated": false,
						"DataId": {
							"Ref": "${stack}${instance}XssSet"
						}
					}
				]
			}
		},
        "${stack}${instance}PathsStringSet": {
            "Type": "AWS::WAFRegional::ByteMatchSet",
            "Properties": {
                "Name": "${stack}-${instance}-match-rfi-lfi-traversal",
                "ByteMatchTuples": [
                    {
                        "FieldToMatch": {
                            "Type": "URI"
                        },
                        "PositionalConstraint": "CONTAINS",
                        "TargetString": "../",
                        "TextTransformation": "URL_DECODE"
                    },
                    {
                        "FieldToMatch": {
                            "Type": "URI"
                        },
                        "PositionalConstraint": "CONTAINS",
                        "TargetString": "../",
                        "TextTransformation": "HTML_ENTITY_DECODE"
                    },
                    {
                        "FieldToMatch": {
                            "Type": "QUERY_STRING"
                        },
                        "PositionalConstraint": "CONTAINS",
                        "TargetString": "../",
                        "TextTransformation": "URL_DECODE"
                    },
                    {
                        "FieldToMatch": {
                            "Type": "QUERY_STRING"
                        },
                        "PositionalConstraint": "CONTAINS",
                        "TargetString": "../",
                        "TextTransformation": "HTML_ENTITY_DECODE"
                    },
                    {
                        "FieldToMatch": {
                            "Type": "URI"
                        },
                        "PositionalConstraint": "CONTAINS",
                        "TargetString": "://",
                        "TextTransformation": "URL_DECODE"
                    },
                    {
                        "FieldToMatch": {
                            "Type": "URI"
                        },
                        "PositionalConstraint": "CONTAINS",
                        "TargetString": "://",
                        "TextTransformation": "HTML_ENTITY_DECODE"
                    },
                    {
                        "FieldToMatch": {
                            "Type": "QUERY_STRING"
                        },
                        "PositionalConstraint": "CONTAINS",
                        "TargetString": "://",
                        "TextTransformation": "URL_DECODE"
                    },
                    {
                        "FieldToMatch": {
                            "Type": "QUERY_STRING"
                        },
                        "PositionalConstraint": "CONTAINS",
                        "TargetString": "://",
                        "TextTransformation": "HTML_ENTITY_DECODE"
                    }
                ]
            }
        },
        "${stack}${instance}PathsRule": {
            "Type": "AWS::WAFRegional::Rule",
            "Properties": {
                "MetricName": "${stack}${instance}PathsRule",
                "Name": "${stack}-${instance}-Paths-Rule",
                "Predicates": [
                    {
                        "Type": "ByteMatch",
                        "Negated": false,
                        "DataId": {
                            "Ref": "${stack}${instance}PathsStringSet"
                        }
                    }
                ]
            }
        },
        "${stack}${instance}AdminUrlStringSet": {
            "Type": "AWS::WAFRegional::ByteMatchSet",
            "Properties": {
                "Name": "${stack}-${instance}-match-admin-url",
                "ByteMatchTuples": [
                    {
                        "FieldToMatch": {
                            "Type": "URI"
                        },
                        "PositionalConstraint": "STARTS_WITH",
                        "TargetString": "/repo/v1/admin",
                        "TextTransformation": "URL_DECODE"
                    }
                ]
            }
        },
        "${stack}${instance}AdminRemoteAddrIpSet": {
            "Type": "AWS::WAFRegional::IPSet",
            "Properties": {
                "Name": "${stack}-${instance}-match-admin-remote-ip",
                "IPSetDescriptors": [
                    {
                        "Type": "IPV4",
                        "Value": "10.1.0.0/16"
                    }
                ]
            }
        },
        "${stack}${instance}AdminAccessRule": {
            "Type": "AWS::WAFRegional::Rule",
            "Properties": {
                "MetricName": "${stack}${instance}AdminAccessRule",
                "Name": "${stack}-${instance}-Admin-Access-Rule",
                "Predicates": [
                    {
                        "Type": "ByteMatch",
                        "Negated": false,
                        "DataId": {
                            "Ref": "${stack}${instance}AdminUrlStringSet"
                        }
                    },
                    {
                        "Type": "IPMatch",
                        "Negated": true,
                        "DataId": {
                            "Ref": "${stack}${instance}AdminRemoteAddrIpSet"
                        }
                    }
                ]
            }
        },
		"${stack}${instance}WebACL": {
			"Type": "AWS::WAFRegional::WebACL",
			"Properties": {
				"DefaultAction": {
					"Type": "ALLOW"
				},
				"MetricName": "${stack}${instance}WebACL",
				"Name": "${stack}${instance}WebACL",
				"Rules": [
					{
						"Action": {
							"Type": "BLOCK"
						},
						"Priority": 1,
						"RuleId": {
							"Ref": "${stack}${instance}SizeRestrictionRule"
						}
					},
					{
						"Action": {
							"Type": "COUNT"
						},
						"Priority": 2,
						"RuleId": {
							"Ref": "${stack}${instance}URISQLInjectionRule"
						}
					},
					{
						"Action": {
							"Type": "COUNT"
						},
						"Priority": 3,
						"RuleId": {
							"Ref": "${stack}${instance}QuerySQLInjectionRule"
						}
					},
					{
						"Action": {
							"Type": "COUNT"
						},
						"Priority": 4,
						"RuleId": {
							"Ref": "${stack}${instance}BodySQLInjectionRule"
						}
					},
					{
						"Action": {
							"Type": "COUNT"
						},
						"Priority": 5,
						"RuleId": {
							"Ref": "${stack}${instance}HeaderSQLInjectionRule"
						}
					},
					{
						"Action": {
							"Type": "COUNT"
						},
						"Priority": 6,
						"RuleId": {
							"Ref": "${stack}${instance}XssRule"
						}
					},
					{
						"Action": {
							"Type": "COUNT"
						},
						"Priority": 7,
						"RuleId": {
							"Ref": "${stack}${instance}PathsRule"
						}
					},
					{
						"Action": {
							"Type": "COUNT"
						},
						"Priority": 8,
						"RuleId": {
							"Ref": "${stack}${instance}AdminAccessRule"
						}
					}
				]
			}
		},
		"portalACLAssociation": {
			"Type": "AWS::WAFRegional::WebACLAssociation",
			"Properties": {
				"ResourceArn": "${portalLoadBalancerARN}",
				"WebACLId": {
					"Ref": "${stack}${instance}WebACL"
				}
			}
		},
		"repoACLAssociation": {
			"Type": "AWS::WAFRegional::WebACLAssociation",
			"Properties": {
				"ResourceArn": "${repoLoadBalancerARN}",
				"WebACLId": {
					"Ref": "${stack}${instance}WebACL"
				}
			}
		},
		"workersACLAssociation": {
			"Type": "AWS::WAFRegional::WebACLAssociation",
			"Properties": {
				"ResourceArn": "${workersLoadBalancerARN}",
				"WebACLId": {
					"Ref": "${stack}${instance}WebACL"
				}
			}
		}
	}
}
